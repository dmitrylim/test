        th {
            background-color: #f2f2f2;
        }

        .bracket {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .bracket .round {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }

        .bracket .round .match {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 10px;
        }

